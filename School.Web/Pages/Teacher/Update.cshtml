@page
@using School.Web.Model
@model School.Web.Pages.Teacher.UpdateModel

<h2>Actualizar Profesor</h2>

<form method="post">
    <div class="form-group">
        <input type="hidden" class="form-control" id="Id" name="Teacher.Id" asp-for="Teacher.Id" required />

        <label asp-for="Teacher.Name">Nombre</label>
        <input type="text" class="form-control" id="Name" name="Teacher.Name" asp-for="Teacher.Name" required />
        <span asp-validation-for="Teacher.Name" class="text-danger"></span>

        <label asp-for="Teacher.LastName">Apellido</label>
        <input type="text" class="form-control" id="LastName" name="Teacher.LastName" asp-for="Teacher.LastName" required />
        <span asp-validation-for="Teacher.LastName" class="text-danger"></span>

        <div class="form-group">
            <label asp-for="Teacher.Gender">Género</label>
            <div class="form-check">
                <input class="form-check-input" type="radio" id="genderMale" name="Teacher.Gender" value="Masculino" asp-for="Teacher.Gender" required>
                <label class="form-check-label" for="genderMale">Masculino</label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" id="genderFemale" name="Teacher.Gender" value="Femenino" asp-for="Teacher.Gender" required>
                <label class="form-check-label" for="genderFemale">Femenino</label>
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-page="./Index" class="btn btn-secondary">Cancelar</a>
</form>